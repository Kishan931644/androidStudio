<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow style="@style/tablerow">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_margin="10dp"
                    android:text="25+5"
                    android:textAlignment="viewEnd"
                    android:textColor="#000"
                    android:textSize="35dp" />
            </TableRow>

            <TableRow style="@style/tablerow">

                <LinearLayout style="@style/linearLayout">

                    <Button
                        android:id="@+id/cut_btn"
                        style="@style/btn"
                        android:text="C" />

                    <Button
                        android:id="@+id/per_btn"
                        style="@style/btn"
                        android:text="%" />

                    <Button
                        android:id="@+id/can_btn"
                        style="@style/btn"
                        android:text="X" />

                    <Button
                        android:id="@+id/rem_btn"
                        style="@style/btn"
                        android:text="/" />
                </LinearLayout>
            </TableRow>

            <TableRow style="@style/tablerow">

                <LinearLayout style="@style/linearLayout">

                    <Button
                        android:id="@+id/sev_btn"
                        style="@style/btn"
                        android:text="7" />

                    <Button
                        android:id="@+id/eig_btn"
                        style="@style/btn"
                        android:text="8" />

                    <Button
                        android:id="@+id/nig_btn"
                        style="@style/btn"
                        android:text="9" />

                    <Button
                        android:id="@+id/mul_btn"
                        style="@style/btn"
                        android:text="*" />
                </LinearLayout>
            </TableRow>

            <TableRow style="@style/tablerow">

                <LinearLayout style="@style/linearLayout">

                    <Button
                        android:id="@+id/fou_btn"
                        style="@style/btn"
                        android:text="4" />

                    <Button
                        android:id="@+id/fiv_btn"
                        style="@style/btn"
                        android:text="5" />

                    <Button
                        android:id="@+id/six_btn"
                        style="@style/btn"
                        android:text="6" />

                    <Button
                        android:id="@+id/sub_btn"
                        style="@style/btn"
                        android:text="-" />
                </LinearLayout>
            </TableRow>

            <TableRow style="@style/tablerow">

                <LinearLayout style="@style/linearLayout">

                    <Button
                        android:id="@+id/one_btn"
                        style="@style/btn"
                        android:text="0" />

                    <Button
                        android:id="@+id/two_btn"
                        style="@style/btn"
                        android:text="2" />

                    <Button
                        android:id="@+id/thr_btn"
                        style="@style/btn"
                        android:text="3" />

                    <Button
                        android:id="@+id/sum_btn"
                        style="@style/btn"
                        android:text="+" />
                </LinearLayout>
            </TableRow>

            <TableRow style="@style/tablerow">

                <LinearLayout style="@style/linearLayout">

                    <Button
                        android:id="@+id/dzer_btn"
                        style="@style/btn"
                        android:text="00" />

                    <Button
                        android:id="@+id/zer_btn"
                        style="@style/btn"
                        android:text="0" />

                    <Button
                        android:id="@+id/dot_btn"
                        style="@style/btn"
                        android:text="." />

                    <Button
                        android:id="@+id/equ_btn"
                        style="@style/btn"
                        android:text="=" />
                </LinearLayout>
            </TableRow>

        </TableLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>